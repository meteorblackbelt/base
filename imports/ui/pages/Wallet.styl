#WalletPage
  header
    font-size: 1.75em
    text-align: center

  & > h3
    font-size: 0.9em
    margin: 1em

  section
    box-shadow: rgba(0, 0, 0, 0.05) 0px 1px 6px, rgba(0, 0, 0, 0.05) 0px 1px 4px
    margin: 1em 0

    .card
      padding: 1.5em
      padding-left: 3em
      position: relative
      margin: 0 1em

      &:not(:last-child)
        border-bottom: 1px solid #eee
      &:before

        display: inline-block
        height: 1em
        width: 1em
        margin-right: 1em
        position: absolute
        left: 0

      &.funds-in
        &:before
          content: "↑"
          color: rgba(227, 188, 19, 1)

      &.funds-out
        &:before
          content: "↓"
          color: rgba(86, 172, 242, 1)
